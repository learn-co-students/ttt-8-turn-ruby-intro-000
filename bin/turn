#!/usr/bin/env ruby
require_relative '../lib/turn.rb'
board = [" ", " ", " ", " ", " ", " ", " ", " ", " "]

puts "Welcome to Tic Tac Toe!"
display_board(board)

turn(board)
turn(board)
turn(board)
turn(board)
turn(board)
turn(board)
turn(board)
turn(board)
turn(board)

input = gets.strip

index = input_to_index(input)

move(board, index, value = "X")
display_board(board)
