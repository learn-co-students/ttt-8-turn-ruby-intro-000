#!/usr/bin/env ruby

require_relative '../lib/turn'

board = [" ", " ", " ", " ", " ", " ", " ", " ", " "]

puts "Welcome to Tic Tac Toe!"
display_board(board)
turn(board)
user_input = gets.strip
index = input_to_index(user_input)
(board, index) = gets.strip
move(board, index, "X")
display_board(board)
