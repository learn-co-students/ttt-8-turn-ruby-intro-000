#!/usr/bin/env ruby
require_relative '../lib/turn.rb'

board = [" ", " ", " ", " ", " ", " ", " ", " ", " "]
puts "Welcome to Tic Tac Toe!"
display_board(board)
puts "Please enter 1-9:"
user_input = gets.strip
input_to_index(user_input)
index = input_to_index(user_input)
move(board, index, character = "X")
display_board(board)
counter = 0
until counter == 5
turn(board)
end
