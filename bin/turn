#!/usr/bin/env ruby
require_relative '../lib/turn'

board = Array.new(9, " ")
index = nil
puts "Welcome to Tic Tac Toe!"
display_board(board)
turn(board)

=begin
get input
convert input to index
if index is valid
  make the move for index
  show the board
else
  ask for input again until you get a valid input
end
=end
